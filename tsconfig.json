{
    "compilerOptions": {
        "target": "es6",
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        "rootDir": "./src",
        "module": "commonjs",
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./src",
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/_*",
        "demo",
        "scripts",
        "webpack.config.ts",
        "build"
    ]
}